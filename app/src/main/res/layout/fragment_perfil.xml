<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/user" />

                <TextView
                    android:id="@+id/textViewCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Dados Pessoais"
                    android:textColor="#000000"
                    android:textSize="20dp" />


                <EditText
                    android:id="@+id/edt_txt_email_perfil"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/text_view_circle"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:editable="false"
                    android:hint="Email"
                    android:paddingLeft="18dp"
                    android:paddingRight="30dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#505573"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_txt_nome_perfil"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_view_circle"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:editable="false"
                    android:hint="Nome"
                    android:paddingLeft="18dp"
                    android:paddingRight="30dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#505573"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/edt_txt_endereco_perfil"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_view_circle"
                    android:drawableLeft="@drawable/ic_business_black_24dp"
                    android:editable="false"
                    android:hint="Sem enderÃ§o"
                    android:paddingLeft="18dp"
                    android:paddingRight="30dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#505573"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_txt_telefone_perfil"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_view_circle"
                    android:drawableLeft="@drawable/ic_business_black_24dp"
                    android:editable="false"
                    android:hint="Sem categoria"
                    android:paddingLeft="18dp"
                    android:paddingRight="30dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#505573"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_txt_categoria_perfil"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text_view_circle"
                    android:drawableLeft="@drawable/ic_business_black_24dp"
                    android:editable="false"
                    android:hint="Sem categoria"
                    android:paddingLeft="18dp"
                    android:paddingRight="30dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#505573"
                    android:textSize="16sp" />


                <Button
                    android:id="@+id/btn_mudar_senha_perfil"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_circle_perfil"
                    android:paddingLeft="18dp"
                    android:text="MUDAR SENHA"
                    android:textAlignment="center"
                    android:textColor="#B6BBD7"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_sair_perfil"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_circle_perfil"
                    android:gravity="center"
                    android:onClick="onClickSair"
                    android:text="Sair"
                    android:textColor="#B6BBD7"
                    android:textSize="18sp" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
